{
  "name": "jest-badges-action",
  "description": "Generates coverage badges and pushes them to the repo",
  "version": "1.7.0",
  "main": "lib/main.js",
  "repository": "https://github.com/jpb06/jest-badges-action.git",
  "author": "jpb06 <jpb.06@outlook.com>",
  "license": "MIT",
  "scripts": {
    "cleanDist": "rimraf ./dist && rimraf ./lib",
    "build": "yarn cleanDist && tsc --project tsconfig.prod.json && ncc build --minify",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:dev": "jest --watchAll --coverage",
    "test:ci": "jest --ci --runInBand --coverage",
    "badges": "generateBadges"
  },
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "fs-extra": "^10.0.0",
    "node-jest-badges": "^1.2.0"
  },
  "devDependencies": {
    "@jest/types": "^27.0.6",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.5",
    "@types/prettier": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vercel/ncc": "^0.29.0",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  }
}
